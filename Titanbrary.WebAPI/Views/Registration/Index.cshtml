            <option>Washington</option>
            <option>West Virginia</option>
            <option>Wisconsin</option>
            <option>Wyoming</option>
        </select>
        <br />

        <label class="labelwidth" style="margin:20px">Zip Code : </label>
        <input class="textboxwidth" id="zip" type="number" onKeyPress="if(this.value.length == 5) return false;" style="margin:20px"/>
        <br />

        <label class="labelwidth" style="margin:20px">Phone : *</label>
        <input class="textboxwidth" id="phone" type="tel" onKeyPress="if(this.value.length == 9) return false;" style="margin:20px" required />
        <br />

        <label class="labelwidth" style="margin:20px">Email : *</label>
        <input class="textboxwidth" id="email" type="email" maxlength="100" style="margin:20px" required />
        <br />

        <label class="labelwidth" style="margin:20px">Gender : </label>
        <input name="gender" type="radio" value="female" style="margin:20px"/> Female
        <input name="gender" type="radio" value="male" style="margin-left:10px; margin:20px"/> Male
        <input name="gender" type="radio" value="none" style="margin-left:10px; margin:20px"/> Prefer not to say
        <br />

        <label class="labelwidth" style="margin:20px">Security Question # 1 : *</label>
        <select class="textboxwidth" id="securityQ1" name="question1" style="margin:20px" required>
