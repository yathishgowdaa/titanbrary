<h1>@ViewBag.Title</h1>

<div class="container" style="padding:30px;">
    <p style="color:red;">* Indicates required field.</p>
    <form method="post">
        <!--action="" method=""-->
        <label class="labelwidth" style="margin:20px">Username : *</label>
        <input class="textboxwidth" id="username" type="text" maxlength="50" style="margin:20px" required/>
        <br />

        <label class="labelwidth" style="margin:20px">Password : *</label>
        <input class="textboxwidth" id="password" type="password" maxlength="50" style="margin:20px" required/>
        <br />

        <label class="labelwidth" style="margin:20px">Confirm Password : *</label>
        <input class="textboxwidth" id="confirmPassword" type="password" maxlength="50" style="margin:20px" required/>
        <br />

        <label class="labelwidth" style="margin:20px">Student ID : *</label>
        <input class="textboxwidth" id="studentID" type="number" onKeyPress="if(this.value.length == 9) return false;" style="margin:20px" required />
        <br />

        <label class="labelwidth" style="margin:20px">First Name : *</label>
        <input class="textboxwidth" id="firstName" type="text" maxlength="50" style="margin:20px" required />
        <br />

        <label class="labelwidth" style="margin:20px">Last Name : *</label>
        <input class="textboxwidth" id="lastName" type="text" maxlength="50" style="margin:20px" required />
        <br />

        <label class="labelwidth" style="margin:20px">Date of Birth : </label>
        <input class="textboxwidth" id="dob" type="date" style="margin:20px"/>
        <br />

        <label class="labelwidth" style="margin:20px">Address : </label>
        <input class="textboxwidth" id="address" type="text" maxlength="100" style="margin:20px" />
        <br />

        <label class="labelwidth" style="margin:20px">City : </label>
        <input class="textboxwidth" id="city" type="text" maxlength="50" style="margin:20px" />
        <br />

        <label class="labelwidth" style="margin:20px">State :</label>
        <select class="textboxwidth" id="state" name="state" style="margin:20px">
